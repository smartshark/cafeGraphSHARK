{
    "name": "cafeGraphSHARK",
    "author": "Philip Makedonski",
    "version": "1.0.1",
    "plugin_type": "repo",
    "linux_libraries": [
        "git"
    ],
    "created_collections": [
		{
			"name": "cfa_state",
			"shard_key": [{"_id": "hashed"}, {"entity_id": 1}]
		}
	],
    "description": "Plugin to identify cause-fix relationships between artifact states.",
    "requires": [
        {
            "name": "vcsSHARK",
            "operator": ">=",
            "version": "0.13"
        },
        {
            "name": "humbleSHARK",
            "operator": ">=",
            "version": "1.0.1"
        }
    ],
    "arguments": [
        {
            "name": "plugin_path",
            "required": true,
            "position": 1,
            "type": "install",
            "description": "path to the root folder of the plugin"
        },
        {
            "name": "plugin_path",
            "required": true,
            "position": 1,
            "type": "execute",
            "description": "path to the root folder of the plugin"
        },
        {
            "name": "path",
            "required": true,
            "position": 2,
            "type": "execute",
            "description": "path to the project repository"
        },
        {
            "name": "merges",
            "required": false,
            "position": 3,
            "type": "execute",
            "description": "process merge commits (not recommended)"
        },
        {
            "name": "url",
            "required": true,
            "position": 4,
            "type": "execute",
            "description": "url of the project"
        },
        {
            "name": "db_hostname",
            "required": true,
            "position": 5,
            "type": "execute",
            "description": "hostname of the server, where the mongodb runs on"
        },
        {
            "name": "db_port",
            "required": true,
            "position": 6,
            "type": "execute",
            "description": "port on which the mongodb is listening on"
        },
        {
            "name": "db_database",
            "required": true,
            "position": 7,
            "type": "execute",
            "description": "name of the database in the mongodb"
        },
        {
            "name": "db_user",
            "required": false,
            "position": 8,
            "type": "execute",
            "description": "database user for the mongodb"
        },
        {
            "name": "db_password",
            "required": false,
            "position": 9,
            "type": "execute",
            "description": "password for the user of the mongodb"
        },
        {
            "name": "db_authentication",
            "required": false,
            "position": 10,
            "type": "execute",
            "description": "databse against which users are authenticated"
        },
        {
            "name": "ssl_enabled",
            "required": false,
            "position": 11,
            "type": "execute",
            "description": "needs to be set if database uses ssl connection"
        },
        {
            "name": "debug",
            "required": false,
            "position": 12,
            "type": "execute",
            "description": "debug choices (INFO, DEBUG, WARNING, ERROR)"
        }
    ]
}
